===run-submission===

 <run-submission id="1412" team-id="74" problem-id="4">
 
   <language>C++</language>
   <contest-time>17960.74</contest-time>
   <timestamp>1265353100.29</timestamp>
 
   <source name="hello2.c" main="true">
 /* hello2.c */
 
 #include &lt;stdio.h&gt;
 #include &lt;stdlib.h&gt;
 #include "hello2.h"
 
 void main(int argc, char **argv)
 {
   puts(HI);
   exit(0);
 }
 
 /* eof */
   </source>
 
 <source name="hello2.h" main="false">
 /* hello2.h */
 
 #ifndef _HELLO_H_
 #define _HELLO_H_
 
 #define HI "Hello World!"
 
 #endif
    </source>
 
 </run-submission>

;id: run identifier 
;team-id: team ID 
;problem-id: problem ID 
;language: Language Name
;contest-time: huh contest (elapsed) time in minutes with decimal
;timestamp: the current computer time when this element was created, decimal seconds 
;source: source file contents
:;name: source file name
:;main: is this source file the main file, true or false
